# =============================================================================
# Vigil Environment Configuration
# Copy to .env and fill in values
# =============================================================================

# --- Database ---
DATABASE_URL=postgresql+asyncpg://vigil:vigil@localhost:5432/vigil
# For local dev without Docker, use SQLite:
# DATABASE_URL=sqlite+aiosqlite:///./vigil.db

# --- Redis ---
REDIS_URL=redis://localhost:6379/0

# --- Server ---
VIGIL_HOST=0.0.0.0
VIGIL_PORT=8000
VIGIL_LOG_LEVEL=info
VIGIL_CORS_ORIGINS=["http://localhost:3000"]

# --- Dashboard ---
NEXT_PUBLIC_API_URL=http://localhost:8000

# --- Auth ---
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
VIGIL_API_KEY=dev-api-key-change-me

# --- Docker Postgres ---
POSTGRES_USER=vigil
POSTGRES_PASSWORD=vigil
POSTGRES_DB=vigil
